<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="183.0" prefWidth="823.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.Controller">
   <children>
      <Label fx:id="label" alignment="CENTER" prefHeight="117.0" prefWidth="823.0" style="-fx-background-color: black;" text="MP3 Player" textFill="#04d312">
         <font>
            <Font size="49.0" />
         </font>
      </Label>
      <ProgressBar fx:id="progressBar" layoutY="117.0" prefHeight="20.0" prefWidth="823.0" progress="0.0" />
      <Button layoutY="137.0" mnemonicParsing="false" onAction="#playSong" text="PLAY">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button layoutX="91.0" layoutY="137.0" mnemonicParsing="false" onAction="#pauseSong" text="PAUSE">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button layoutX="202.0" layoutY="137.0" mnemonicParsing="false" onAction="#resetSong" text="RESET">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button layoutX="311.0" layoutY="137.0" mnemonicParsing="false" onAction="#prevSong" text="PREVIOUS">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button layoutX="465.0" layoutY="137.0" mnemonicParsing="false" onAction="#nextSong" text="NEXT">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <ComboBox fx:id="trackSpeeds" layoutX="562.0" layoutY="137.0" onAction="#changeSpeed" prefHeight="46.0" prefWidth="91.0" promptText="SPEED" />
      <Slider fx:id="volumeSlider" layoutX="661.0" layoutY="152.0" max="1.0" prefHeight="16.0" prefWidth="154.0" value="0.5" />
   </children>
</AnchorPane>
